{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "rootDirs": ["src", "pages"],
    "declaration": true,
    "types": ["node", "jest"],
    "jsx": "preserve",
    "lib": ["es2017", "dom"],
    "typeRoots": ["../../node_modules/@types", "node_modules/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "public", ".cache"],
  "include": ["**/*.ts", "**/*.tsx"]
}
