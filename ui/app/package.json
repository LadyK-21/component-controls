{
  "name": "@component-controls/app",
  "version": "3.10.2",
  "description": "Component controls standalone application.",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "yarn cross-env NODE_ENV=production rollup -c",
    "dev": "yarn cross-env NODE_ENV=development rollup -cw",
    "docs": "ts-md",
    "fix": "yarn lint --fix",
    "lint": "yarn eslint . --ext mdx,ts,tsx",
    "prepare": "yarn build",
    "test:create": "cc-cli -g doc -c ./.config -w -d 5",
    "test": "yarn jest"
  },
  "homepage": "https://github.com/ccontrols/component-controls",
  "bugs": {
    "url": "https://github.com/ccontrols/component-controls/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ccontrols/component-controls.git",
    "directory": "ui/app"
  },
  "license": "MIT",
  "dependencies": {
    "@component-controls/blocks": "^3.10.2",
    "@component-controls/components": "^3.10.2",
    "@component-controls/core": "^3.10.2",
    "@component-controls/routes": "^3.10.2",
    "@component-controls/store": "^3.10.2",
    "query-string": "^6.13.5"
  },
  "devDependencies": {
    "@component-controls/cc-cli": "^3.10.2",
    "@component-controls/ts-markdown-docs": "^3.8.2",
    "@emotion/jest": "^11.3.0",
    "@types/query-string": "^6.3.0",
    "@types/react": "^16.9.34",
    "@types/react-helmet": "^6.0.0",
    "cross-env": "^5.2.1",
    "eslint": "^6.5.1",
    "jest-url-loader": "^0.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "theme-ui": "^0.6.0-alpha.7",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17",
    "react-dom": "^16.8.0 || ^17",
    "theme-ui": ">= 0.4.0-rc.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "Atanas Stoyanov"
  ],
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "roots": [
      "./src"
    ],
    "transform": {
      "\\.(jpg|jpeg|png|gif|svg)$": "jest-url-loader"
    },
    "snapshotSerializers": [
      "@emotion/jest/serializer"
    ]
  },
  "gitHead": "e30d62f101e104711a16261fce04785d58cac1eb"
}
