{
  "name": "@component-controls/editors",
  "version": "3.14.0",
  "description": "Component controls editors for component control values.",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "yarn cross-env NODE_ENV=production rollup -c",
    "dev": "yarn cross-env NODE_ENV=development rollup -cw",
    "docs": "ts-md",
    "fix": "yarn lint --fix",
    "lint": "yarn eslint . --ext mdx,ts,tsx",
    "prepare": "yarn build",
    "test:create": "cc-cli -g doc -c ./.config -w -d 5",
    "test": "yarn jest"
  },
  "homepage": "https://github.com/ccontrols/component-controls",
  "bugs": {
    "url": "https://github.com/ccontrols/component-controls/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ccontrols/component-controls.git",
    "directory": "core/specification"
  },
  "license": "MIT",
  "dependencies": {
    "@component-controls/components": "^3.14.0",
    "@component-controls/core": "^3.14.0",
    "@component-controls/store": "^3.14.0",
    "global": "^4.3.2",
    "react-colorful": "^5.0.0"
  },
  "devDependencies": {
    "@component-controls/cc-cli": "^3.14.0",
    "@component-controls/ts-markdown-docs": "^3.8.2",
    "@emotion/jest": "^11.3.0",
    "@primer/octicons-react": "^10.0.0",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.34",
    "cross-env": "^5.2.1",
    "eslint": "^6.5.1",
    "jest": "^26.4.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "@primer/octicons-react": ">= 10.0.0",
    "react": "^16.8.0 || ^17",
    "react-dom": "^16.8.0 || ^17"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "Atanas Stoyanov"
  ],
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "roots": [
      "./src"
    ],
    "snapshotSerializers": [
      "@emotion/jest/serializer"
    ]
  },
  "gitHead": "e30d62f101e104711a16261fce04785d58cac1eb"
}
