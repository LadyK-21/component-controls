{
  "name": "@component-controls/cc-cli",
  "version": "3.11.0",
  "description": "Command line tool to generate testing templates",
  "keywords": [
    "jest",
    "enzyme",
    "react-testing-library",
    "snapshot-testing"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/",
    "templates/",
    "bin/",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "yarn cross-env NODE_ENV=production rollup -c",
    "dev": "yarn cross-env NODE_ENV=development rollup -cw",
    "docs": "ts-md",
    "fix": "yarn lint --fix",
    "lint": "yarn eslint . --ext mdx,ts,tsx",
    "create-bundle": "ccc -c test/.config -d test/bundle",
    "prepare": "yarn build",
    "test:create": "cc-cli -g story -c ./test/.config -o test -w",
    "test": "yarn jest -i"
  },
  "homepage": "https://github.com/ccontrols/component-controls",
  "bugs": {
    "url": "https://github.com/ccontrols/component-controls/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ccontrols/component-controls.git",
    "directory": "plugins/cc-cli"
  },
  "license": "MIT",
  "bin": {
    "cc-cli": "./bin/index.js"
  },
  "dependencies": {
    "@component-controls/instrument": "^3.11.0",
    "@component-controls/jest-axe-matcher": "^3.8.1",
    "@component-controls/logger": "^3.10.0",
    "@component-controls/store": "^3.11.0",
    "@component-controls/test-renderers": "^3.11.0",
    "@component-controls/webpack-compile": "^3.11.0",
    "@component-controls/webpack-configs": "^3.11.0",
    "dot": "^1.1.3",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/dot": "^1.1.4",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.10",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^17.0.1",
    "@types/testing-library__jest-dom": "^5.9.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.3.1",
    "babel-jest": "^26.6.3",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.5.0",
    "jest": "^26.4.2",
    "jsdom": "^16.5.3",
    "mock-argv": "^2.0.0",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "Atanas Stoyanov"
  ],
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "roots": [
      "./test"
    ]
  },
  "gitHead": "e30d62f101e104711a16261fce04785d58cac1eb"
}
